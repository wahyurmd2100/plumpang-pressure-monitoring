@model CSL.Web.Models.Product

@{
    ViewData["Title"] = "AddOrEdit";
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.ProductId" onsubmit="return jQueryAjaxPost(this);" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />
            <div class="form-group">
                <label asp-for="ProductCode" class="control-label"></label>
                <input asp-for="ProductCode" class="form-control" />
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HexColor" class="control-label"></label>
                <input asp-for="HexColor" class="form-control" />
                <span asp-validation-for="HexColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DefaultDensity" class="control-label"></label>
                <input asp-for="DefaultDensity" class="form-control" />
                <span asp-validation-for="DefaultDensity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DefaultTemp" class="control-label"></label>
                <input asp-for="DefaultTemp" class="form-control" />
                <span asp-validation-for="DefaultTemp" class="text-danger"></span>
            </div>
            <div class="form-group" class="col text-center">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Discard</button>
                    <button type="submit" class="btn btn-success">Save changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
