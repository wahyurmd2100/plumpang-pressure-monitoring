                    </tr>
                    <tr>
                        <td>4.82</td>
                        <td>2023-05-25 12:35:45</td>
                    </tr>
                    <tr>
                        <td>1.97</td>
                        <td>2023-05-25 13:45:30</td>
                    </tr>
                </tbody>
            </table>
            <!-- End Tank table -->
        </div>
    </div>
    <!-- End Submain Content -->

</div>
<!-- End Page Content -->
