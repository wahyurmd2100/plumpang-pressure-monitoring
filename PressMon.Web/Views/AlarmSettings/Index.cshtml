@model TMS.Web.Models.AlarmSettings
@{
    ViewData["Title"] = "Alarm Settings";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}
<head>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            var editButton = document.getElementById("editButton");
            var saveButton = document.getElementById("saveButton");
            var cancelButton = document.getElementById("cancelButton");
            var inputFields = document.querySelectorAll("#inlineFormInputGroup");

            // Disable input fields
            inputFields.forEach(function (input) {
                input.disabled = true;
            });

            // Enable form on Edit button click
            editButton.addEventListener("click", function () {
                inputFields.forEach(function (input) {
                    input.disabled = false;
                });

                editButton.classList.add("d-none");
                saveButton.classList.remove("d-none");
                cancelButton.classList.remove("d-none");
            });

            // Disable form on Save button click
            saveButton.addEventListener("click", function () {
                inputFields.forEach(function (input) {
                    input.disabled = true;
                });

                editButton.classList.remove("d-none");
                saveButton.classList.add("d-none");
                cancelButton.classList.add("d-none");
            });

            // Disable form on Cancel button click
            cancelButton.addEventListener("click", function () {
                inputFields.forEach(function (input) {
                    input.disabled = true;
                });

                editButton.classList.remove("d-none");
                saveButton.classList.add("d-none");
                cancelButton.classList.add("d-none");
            });
        });

    </script>
</head>

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h4 mb-0 text-gray-800">Alarm Settings</h1>
        <a value="reload" onclick="document.location.reload(true)" class="d-none d-sm-inline-block btn btn-sm btn-info shadow-sm">
            <i class="fas fa-redo-alt"></i>
        </a>
    </div>



    <div class="card shadow-lg rounded" style="width: 100%;">
        <div class="card-header bg-gradient-info p-1"></div>
        <div class="card-body">
            <h5 class="card-title">Alarm Value Settings</h5>

            <form>
                <div class="form-row">
                    <div class="col-auto">
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="width: 50px;">LL</span>
                            </div>
                            <input type="text" class="form-control" id="inlineFormInputGroup" value="1.00" disabled>
                        </div>
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="width: 50px;">L</span>
                            </div>
                            <input type="text" class="form-control" id="inlineFormInputGroup" value="2.00" disabled>
                        </div>
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="width: 50px;">H</span>
                            </div>
                            <input type="text" class="form-control" id="inlineFormInputGroup" value="8.00" disabled>
                        </div>
                        <div class="input-group mb-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text" style="width: 50px;">HH</span>
                            </div>
                            <input type="text" class="form-control" id="inlineFormInputGroup" value="9.00" disabled>
                        </div>
                        <button type="button" class="btn btn-warning" id="editButton">
                            <i class="fas fa-edit fa-lg"></i> Edit
                        </button>
                        <button type="button" class="btn btn-success d-none" id="saveButton">
                            <i class="fas fa-save fa-lg"></i> Save
                        </button>
                        <button type="button" class="btn btn-secondary d-none" id="cancelButton">
                            <i class="fas fa-times fa-lg"></i> Cancel
                        </button>
                    </div>
                </div>
            </form>



        </div>
    </div>
</div>
