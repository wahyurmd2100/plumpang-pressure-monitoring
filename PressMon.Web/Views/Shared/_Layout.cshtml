<!DOCTYPE html>
<html lang="en">
@using Microsoft.AspNetCore.Identity
@using PressMon.Web.Areas.Identity.Data

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CSL - @ViewData["Title"]</title>
    <!-- Google Font: Source Sans Pro -->
    @*<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">*@
    <!-- Font Awesome -->
    <link href="~/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    <!-- Bootstrap 4  -->
    <link href="~/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <!-- Icheck  -->
    <link href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css" rel="stylesheet" />
    <!-- Theme style  -->
    <link href="~/plugins/overlayScrollbars/css/OverlayScrollbars.min.css" rel="stylesheet" />
    <!-- summernote -->
    <link href="~/css/adminlte.css" rel="stylesheet" />
    <!-- overlayScrollbars -->
    <link href="~/plugins/daterangepicker/daterangepicker.css" rel="stylesheet" />
    <!-- summernote -->
    <link href="~/plugins/summernote/summernote-bs4.min.css" rel="stylesheet" />
    <!-- icon  -->
    <link href="~/iconstyle.css" rel="stylesheet" />

    <link href="~/plugins/jquery-ui/jquery-ui.min.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)

</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <nav class="main-header navbar-expand navbar navbar-white navbar-light" style="height:77px;border-bottom:0px;">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
            <li class="nav-item">
                <a href="#" class="nav-link"></a>
            </li>
        </ul>
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <partial name="_LoginPartial.cshtml" />
            </li>
        </ul>
    </nav>
    <!-- /navbar -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="#" class="brand-link">
            <img src="~/images/CITIA2.png" alt="CITIALogo" style="opacity: .8" width="50" height="50">
            <span class="brand-text font-weight-light">Tank Management System</span>
        </a>

        <!-- Sidebar Menu  -->
        <div class="sidebar">
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <!-- add icon -->
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                            <i href="#" class="nav-icon icon-home1" style="font-size: 25px;"></i>
                            <p class="font-weight-normal align-top">
                                Dashboard
                            </p>
                        </a>
                    </li>
                    <!-- Tank menu -->
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i href="#" class="nav-icon icon-lastfm-square" style="font-size: 25px;"></i>
                            <p class="font-weight-normal align-top">
                                Tank
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a asp-area="" asp-controller="TankTicket" asp-action="Index" class="nav-link">
                                    <i href="#" class="nav-icon icon-briefcase margin-right" style="font-size: 25px;"></i>
                                    <p class="font-weight-light align-top">Tank Ticket</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a  asp-area="" asp-controller="TankLiveDatas" asp-action="Index" class="nav-link">
                                    <i  href="#" class="nav-icon icon-lastfm-square mb-2" style="font-size: 25px;"></i>
                                    <p class="font-weight-light align-top">Tank Monitoring</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i href="#" class="nav-icon icon-pie-chart mb-2" style="font-size: 25px;"></i>
                                    <p class="font-weight-light align-top">Tank Historical</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                    <!-- Report menu  -->
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i href="#" class="nav-icon icon-lastfm-square mb-2" style="font-size: 25px;"></i>
                            <p class="font-weight-normal align-top">
                                Report
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i href="#" class="nav-icon icon-joomla mb-2" style="font-size: 25px;"></i>
                                    <p class="font-weight-light align-top">Physical Inventory</p>
                                </a>
                            </li>
                        </ul>

                    </li>
                    <!-- Administration menu  -->
                    <li class="nav-item">
                        <a href="#" class="nav-link">
                            <i href="#" class="nav-icon icon-cogs1 mb-2" style="font-size: 25px;"></i>
                            <p class="font-weight-normal align-top">
                                Administration
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">
                                    <i href="#" class="nav-icon icon-list1 mb-2" style="font-size: 25px;"></i>
                                    <p>Product</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Tanks" asp-action="Index">
                                    <i href="#" class="nav-icon icon-list1 mb-2" style="font-size: 25px;"></i>
                                    <p>Tank Configuration</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="AppUsers" asp-action="Index">
                                    <i href="#" class="nav-icon icon-user-tie" style="font-size: 25px;"></i>
                                    <p class="font-weight-light">App Users</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Roles" asp-action="Index">
                                    <i href="#" class="nav-icon icon-user-tie" style="font-size: 25px;"></i>
                                    <p class="font-weight-light">Roles</p>
                                </a>
                            </li>


                        </ul>
                    </li>
                </ul>
            </nav>
        </div>
    </aside>
    @*//Main content*@
    <div class="content-wrapper">
        @RenderBody()
    </div>

    <footer class="main-footer">
        <div class="float-right d-none d-sm-block">
            <b>Version</b> 1.0.0
        </div>
        <strong>© 2021 <a href="https://citia-engineering.com/">CITIA Engineering</a>.</strong> All rights reserved.
    </footer>

    <div class="modal fade" tabindex="-1" role="dialog" id="form-modal">
        <div class="modal-dialog modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                </div>
            </div>
        </div>
    </div>

    <div class="loaderbody" id="loaderbody">
        <div class="loader"></div>
    </div>
    @*content*@ 
    <div id="content">

    </div>
    <!-- Jquery  -->
    <script src="~/plugins/jquery/jquery.js"></script>
    <script src="~/plugins/jquery/jquery.min.js"></script>

    @*<script src="~/materialize/js/materialize.min.js"></script>*@ <!-- unused -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Bootstrap 4 -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- Moment js -->
    <script src="~/plugins/moment/moment.min.js"></script>
    <!-- Tempusdominus Bootstrap 4 -->
    <script src="~/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>
    <!-- Summernote -->
    <script src="~/plugins/summernote/summernote-bs4.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="~/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/js/adminlte.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/js/demo.js"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    @*<script src="~/js/pages/dashboard.js"></script>*@
    @*<script type="text/javascript">
            $.widget.bridge('uibutton', $.ui.button);
        </script>*@
    @if (IsSectionDefined("AddToHead"))
    {
        @RenderSection("AddToHead", required: false)
    }
    @RenderSection("Scripts", required: false)
</body>
</html>
