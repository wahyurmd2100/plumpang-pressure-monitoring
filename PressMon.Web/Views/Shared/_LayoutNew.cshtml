        window.addEventListener("load", function () {
            var blinkingText = document.getElementById("blinkingText");
            var visibleDuration = 1000; // Duration in milliseconds for the visible state
            var hiddenDuration = 500; // Duration in milliseconds for the hidden state

            function blinkText() {
                if (blinkingText.style.visibility === "" || blinkingText.style.visibility === "visible") {
                    blinkingText.style.visibility = "hidden";
                    setTimeout(function () {
                        blinkingText.style.visibility = "visible";
                    }, hiddenDuration);
                } else {
                    blinkingText.style.visibility = "visible";
                    setTimeout(function () {
                        blinkingText.style.visibility = "hidden";
                    }, visibleDuration);
                }
            }

            function handleClick() {
                blinkingText.style.display = "none";
            }

            setInterval(blinkText, visibleDuration + hiddenDuration);

            blinkingText.addEventListener("click", handleClick);
        });

    </script>

