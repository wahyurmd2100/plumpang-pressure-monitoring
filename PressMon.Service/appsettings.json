{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "ServerAddress": "http://localhost/PressMon" //ini untuk api ke Web server
  },
  "SensorConfig": {
    "IpAddress": "127.0.0.1", //config IP PLC
    "Port": 502, //port untuk PLC
    "TimeLoop": 5000, //Waktu untuk pengambilan data satuan ms(mili second) jadi kalau 5000 ambil datanya tiap 5 detik
    "Sensors": [
      {
        "Address": 40001, //address modbus dan pastikan type datanya float/double (2 Register)
        "Type": "Pressure",
        "Value": 0,
        "Location": "M-01" // untuk lokasi sensor
      }
    ]
  }
}
